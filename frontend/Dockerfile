# Etapa de construcci칩n
FROM node:18 AS builder

WORKDIR /app

# Copiar archivos de configuraci칩n y dependencias
COPY package*.json ./
COPY tsconfig*.json ./
COPY vite.config.ts ./
COPY .env ./ 

# Instalar dependencias
RUN npm install

# Copiar el resto del proyecto
COPY public ./public
COPY src ./src
COPY index.html ./

# Compilar el proyecto
RUN npm run build

# Etapa de producci칩n con nginx
FROM nginx:stable-alpine

# Copiar los archivos est치ticos generados por Vite
COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
